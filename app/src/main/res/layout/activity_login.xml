        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_name"
            android:hint="@string/hint1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:nextFocusForward="@+id/login_password"
            android:textColorHighlight="#E0E0E0"
            android:textColorHint="#7EB6FF"
            android:textColor="#E0E0E0"
            android:textSize="25dp"
            android:fontFamily="sans-serif"
            android:layout_below="@id/admin"

            android:layout_marginLeft="50dp"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/login_password"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:hint="@string/hint2"
            android:nextFocusForward="@+id/button_login"
            android:textColorHighlight="#E0E0E0"
            android:textColorHint="#7EB6FF"
            android:textColor="#E0E0E0"
            android:textSize="25dp"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/admin"
           android:layout_marginLeft="210dp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Sign in"
            android:textStyle="bold"
            android:visibility="visible"
            android:textSize="16dp"
            android:onClick="validateLogin"
            android:layout_toRightOf="@+id/login_password"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/login_password"
            android:background="@drawable/button_states_options"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="PROCEED"
            android:background="@drawable/button_states"
            android:id="@+id/button_proceed"
            android:focusable="true"
            android:textColor="#E0E0E0"
            android:onClick="nextscreen"
            android:textStyle="bold"
            android:padding="10dp"

            android:textSize="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/status"
            android:layout_marginTop="280dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copy"
            android:text="Copyright"
            android:textSize="15dp"
            android:textColor="@drawable/black"
            android:layout_alignTop="@+id/katie"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="-55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/button_proceed"
            android:layout_toRightOf="@id/copy"
            android:layout_marginLeft="8dp"
            android:id="@+id/katie"


            android:textSize="15dp"/>


