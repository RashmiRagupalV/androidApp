<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"

    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/color_background"
        android:paddingBottom="@dimen/activity_vertical_margin"
         tools:context=".Login">


    <TextView android:text="Login" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:textSize="60dp"
        android:textColor="#F0F0F0"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/appName"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Flags App"
        android:textStyle="bold"
        android:id="@+id/appName"
        android:textColor="#F0F0F0"
        android:textSize="70dp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/appIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/appIcon"
        android:adjustViewBounds="true"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:src="@drawable/main_background"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="250dp"
            android:maxLength="40"
            android:layout_height="wrap_content"
            android:id="@+id/yourname"
            android:hint="@string/hint9"
            android:singleLine="false"
            android:imeOptions="actionNext"
            android:focusable="true"
            android:nextFocusForward="@+id/login_name"
            android:textColorHighlight="#E0E0E0"
            android:textColorHint="#7EB6FF"
            android:textColor="#E0E0E0"
            android:textSize="30dp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/welcome"
            android:layout_centerHorizontal="true"
            />


        <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_name"
        android:hint="@string/hint1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:focusable="true"
        android:nextFocusForward="@+id/login_password"
        android:textColorHighlight="#E0E0E0"
        android:textColorHint="#7EB6FF"
        android:textColor="#E0E0E0"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/yourname"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/login_password"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:focusable="true"
        android:hint="@string/hint2"
        android:nextFocusForward="@+id/button_login"
        android:textColorHighlight="#E0E0E0"
        android:textColorHint="#7EB6FF"
        android:textColor="#E0E0E0"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/login_name"
        android:layout_alignLeft="@+id/login_name"
        android:layout_alignStart="@+id/login_name"
         />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:background="@drawable/button_states"
        android:id="@+id/button_login"
        android:onClick="validateLogin"
        android:focusable="true"
        android:textColor="#E0E0E0"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/login_password"
        android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_above="@+id/appName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="96dp"
            android:layout_marginEnd="96dp" />


</RelativeLayout>
</ScrollView>

