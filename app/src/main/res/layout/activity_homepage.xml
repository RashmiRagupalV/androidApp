<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"

    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

<RelativeLayout android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/color_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/appIcon"
        android:adjustViewBounds="true"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:src="@drawable/main_background"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginTop="74dp"
        android:background="@drawable/button_states_options"
        android:text="REGISTER STUDENT"
        android:textColor="#F0F0F0"
        android:textStyle="bold"
        android:padding="10dp"
        android:onClick="registerStudent"
        android:textSize="40dp"
        android:layout_below="@+id/appIcon"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_states_options"
        android:text="REPORT GENERATION"
        android:textColor="#F0F0F0"
        android:onClick="generateReport"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="40dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_states_options"
        android:text="RECORD ACTIVITIES"
        android:textColor="#F0F0F0"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="40dp"
        android:onClick="recordActivity"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_states_options"
        android:text="LOGOUT"
        android:textColor="#F0F0F0"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="40dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

</ScrollView>

