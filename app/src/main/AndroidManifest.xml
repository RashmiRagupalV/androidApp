<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="redflag.capstone.com.redflag" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".LoginSuccessActivity"
            android:label="@string/title_activity_login_success" >
        </activity>
        <activity
            android:name=".StudentListActivity"
            android:label="@string/title_activity_student_list_by_school" >
        </activity>
        <activity
            android:name=".FilterStudentBySchoolActivity"
            android:label="@string/title_activity_filter_student_by_school" >
        </activity>

        <activity android:name="AndroidDatabaseManager"
            android:label="AndroidDatabaseManager"/>

        <activity
            android:name=".ScreeningTestListActivity"
            android:label="@string/title_screeningtest_list"
            android:parentActivityName=".StudentListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="redflag.capstone.com.redflag.StudentListActivity" />
        </activity>
        <activity
            android:name=".ScreeningTestDetailActivity"
            android:label="@string/title_screeningtest_detail"
            android:parentActivityName=".ScreeningTestListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="redflag.capstone.com.redflag.ScreeningTestListActivity" />
        </activity>
        <activity
            android:name=".StudentSearchAndListActivity"
            android:label="@string/title_activity_student_search_and_list" >
        </activity>
        <activity
            android:name=".RegisterStudentActivity"
            android:label="@string/title_activity_register_student" >
        </activity>
        <activity
            android:name=".StudentDetailsActivity"
            android:label="@string/title_activity_student_details" >
        </activity>
        <activity
            android:name=".ReportActivity"
            android:label="@string/title_activity_report" >
        </activity>
        <activity
            android:name=".TutorialActivity"
            android:label="@string/title_activity_tutorial" >
        </activity>
        <activity
            android:name=".DummyListActivity"
            android:label="@string/title_activity_dummy_list" >
        </activity>
        <activity
            android:name=".EnregistrementVideoStackActivity"
            android:label="@string/title_activity_enregistrement_video_stack" >
        </activity>
        <activity
            android:name=".VideoCapture"
            android:label="@string/title_activity_video_capture" >
        </activity>
    </application>

</manifest>
